@model List<ARM.Areas.Tutor.Models.Subject.SubjectInfoViewModel>

@{
    ViewData["Title"] = "Список дисциплін";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var subject in Model)
        {
            <div class="col">
                <a asp-controller="Group"
                   asp-action="GetGroup"
                   asp-route-subjectId="@subject.Id"
                   asp-route-groupId="@subject.GroupId"
                   class="text-decoration-none text-dark">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@subject.Name</h5>
                        </div>
                        <div class="card-footer text-end bg-light">
                            <small class="text-primary">Переглянути →</small>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        Дисциплін не знайдено.
    </div>
}
